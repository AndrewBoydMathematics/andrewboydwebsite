AddHandler fcgid-script .fcgi
RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ dispatch.fcgi/$1 [QSA,L]

# Set environment variables
SetEnv PYTHONPATH /homepages/30/d4299101357/htdocs
SetEnv DJANGO_SETTINGS_MODULE artwork.settings

# Configure Python
FcgidInitialEnv PYTHONPATH /homepages/30/d4299101357/htdocs
FcgidInitialEnv DJANGO_SETTINGS_MODULE artwork.settings
FcgidInitialEnv PATH /homepages/30/d4299101357/htdocs/venv/bin
FcgidInitialEnv VIRTUAL_ENV /homepages/30/d4299101357/htdocs/venv

# Configure FastCGI
FcgidMaxRequestLen 10485760
FcgidConnectTimeout 20
FcgidIOTimeout 40
FcgidBusyTimeout 300
FcgidMaxProcesses 10
FcgidMaxProcessesPerClass 10
FcgidMinProcessesPerClass 0
FcgidMaxRequestsPerProcess 0
FcgidInitialEnv PYTHONUNBUFFERED 1

# Static files
<FilesMatch "\.(jpg|jpeg|png|gif|css|js|ico)$">
    SetHandler default-handler
</FilesMatch>

# Media files
<FilesMatch "\.(pdf|doc|docx|xls|xlsx|ppt|pptx|zip|rar)$">
    SetHandler default-handler
</FilesMatch> 